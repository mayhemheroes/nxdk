# Build Stage
FROM --platform=linux/amd64 ubuntu:20.04 as builder
RUN apt-get update
RUN DEBIAN_FRONTEND=noninteractive apt-get install -y vim less man wget tar git gzip unzip make cmake software-properties-common curl 
RUN DEBIAN_FRONTEND=noninteractive apt-get install -y clang bison flex lld g++

ADD . /nxdk
WORKDIR /nxdk
RUN git submodule init
RUN git submodule update
RUN make tools
ENV PATH=$PATH:/usr/lib/llvm-10/bin
